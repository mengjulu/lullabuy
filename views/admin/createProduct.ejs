<%- include("../includes/header") %>
<%- include("../includes/adminNavbar") %>

<div class="container-fluid productBox">
  <form class="product-form" action="/admin/product" method="POST" enctype="multipart/form-data">
    <div>
      <label for="name">Product name</label>
      <input class="form-control" type="text" name="name" id="name" required>
    </div>
    <div>
      <label for="category">Category</label>
      <select id="category" name="category" class="form-control" required>
        <option value="">Choose category</option>
        <option value="women">Women</option>
        <option value="men">Men</option>
      </select>
    </div>
    <div>
      <label for="subcategory">Subcategory</label>
      <select id="subcategory" name="subcategory" class="form-control" required>
        <option value="">Choose subcategory</option>
        <option value="robes">Robes</option>
        <option value="pajamas">Pajamas</option>
        <option value="others">Others</option>
      </select>
    </div>
    <div>
      <label for="image">Image</label>
      <input class="form-control" type="file" name="photo" id="image" accept="image/*" required>
    </div>
    <div>
      <label for="price">Price</label>
      <input class="form-control" type="number" name="price" id="price" min="1" step="1" required>
    </div>
    <div>
      <label for="stock">Stock</label>
      <input class="form-control" type="number" name="stock" id="stock" min="1" step="1" required>
    </div>
    <div>
      <label for="description">Description</label>
      <textarea class="form-control" name="description" id="description" rows="5" required></textarea>
    </div>
    <button class="adminBtn btn btn-outline-secondary" type="submit">Add Product</button>
  </form>
</div>
<%- include("../includes/footer") %>